source 'http://rubygems.org'

gem 'rails', '3.1.3'
gem 'rake'

if RUBY_PLATFORM == 'java'
  gem 'jdbc-sqlite3'
  gem 'activerecord-jdbc-adapter'
  gem 'activerecord-jdbcsqlite3-adapter'
  gem 'jruby-openssl'
  gem 'jruby-rack'
else
  gem 'sqlite3'
end

if defined?(JRUBY_VERSION)
  gem 'jdbc-sqlite3'
  gem 'activerecord-jdbc-adapter'
  gem 'activerecord-jdbcsqlite3-adapter'
else
  gem 'sqlite3'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.1.4' # this one breaks MacRuby :/
  gem 'coffee-rails', '~> 3.1.1', :require => 'coffee-rails'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

# To use ActiveModel has_secure_password
# gem 'bcrypt-ruby', '~> 3.0.0'

# Use unicorn as the web server
# gem 'unicorn'

gem 'capistrano'
# gem "bcrypt-ruby-maglev-" if defined?(RUBY_ENGINE) && RUBY_ENGINE == "maglev"
gem 'devise'
gem 'carrierwave'
gem 'rails_autolink'
gem 'jruby-openssl',       :platforms => :jruby
gem 'jruby-rack',          :platforms => :jruby
gem 'ffi-ncurses',         :platforms => :jruby

