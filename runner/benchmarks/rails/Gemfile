gem 'capistrano',                         '2.9.0'
# gem "bcrypt-ruby-maglev-" if defined?(RUBY_ENGINE) && RUBY_ENGINE == "maglev"
gem 'devise',                             '1.5.1'
gem 'carrierwave',                        '0.5.8'
gem 'rails_autolink',                     '1.0.4'

