#!/usr/bin/env bash

# run_benchmark <benchmark_folder> <rvm_command> <ruby_command> <benchmark_file> <result_file>

source "$HOME/.rvm/scripts/rvm"

# thank you to http://stackoverflow.com/questions/59895/can-a-bash-script-tell-what-directory-its-stored-in
SCRIPTS_DIR="$( cd -P "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

cd "$1"
pwd

if rvm "$2@benchmark"
then
	echo 'Sleeping 30 seconds to let the system cool off...'
	sleep 30

	export RUBY_COMMAND="$3"

	echo "benchmarking..."
	echo "$RUBY_COMMAND ($2)"

	# timeout the benchmark after 15 minutes or so
	eval "($SCRIPTS_DIR/timeout3 -t 900 -i 60 -d 15 $3 $4 || echo 'failed') | tail -1 > $5"
else
	echo "rvm failed to switch to $2" > $5
	exit 1
fi